<div class="container">
	<h2 style="font-weight: normal;">マイページ</h2>
	<h4>登録情報</h4>
	<%= link_to '編集する', edit_user_path(@user) %>
	<%= link_to 'パスワードを編集する', edit_user_path(@user) %>
	<table>
		<tbody>
			<tr>
				<th>名前</th>
				<td><%= @user.last_name %> <%= @user.first_name %></td>
			</tr>
			<tr>
				<th>フリガナ</th>
				<td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
			</tr>
			<tr>
				<th>郵便番号</th>
				<td>〒 <%= @user.postal_code %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td><%= @user.address %></td>
			</tr>
			<tr>
				<th>電話番号</th>
				<td><%= @user.phone %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= @user.email %></td>
			</tr>

		</tbody>
	</table>
</div>