<%= form_for(@product, url:admins_product_path) do |f| %>
<h2>商品編集画面</h2>
<div style ="text-align: center;">
  <div class="form-group">
    <label>画像投稿</label>
    <%= attachment_image_tag @product, :image, :fill, 150,100, fallback: "no_imag.jpg" %>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <label>商品名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form-group">
    <label>商品説明</label>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="form-group">
    <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

   <div class="form-group">
    <label>税抜価格</label>
    <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
  </div>

  <div class="form-group">
    <label>販売ステータス</label>
    <%= f.select :is_stopped,{販売中:false, 販売停止:true}%>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存する" %>
  </div>
</div>
<% end %>

