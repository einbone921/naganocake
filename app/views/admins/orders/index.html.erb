<!-- 注文一覧画面 -->
<body>
  <h1>注文一覧画面</h1>

  <table>
  	<tr>
  		<th>購入日時</th>
  		<th>購入者</th>
  		<th>注文個数</th>
  		<th>ステータス</th>
  	</tr>

    <% @orders.each do |order| %>
  	  <tr>
  	    <th><%= link_to order[:created_at].strftime("%Y-%m-%d%H:%M"), admins_order_path(order) %></th>
  		<th><%= order.user.last_name %><%= order.user.first_name %></th>
  		<th><%= order.ordered_items.sum(:quantity) %>
  		<th><%= order.deposit_status %></th>
  	  </tr>
    <% end %>

  </table>
</body>

