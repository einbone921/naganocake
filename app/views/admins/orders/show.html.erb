<div class="row" style="width:60%; margin:0 auto;">
<%= form_for(@order, url:admins_order_path(@order), method: :patch) do |f| %>
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文詳細画面</h4>

	<table class="table table-bordered">
		<tr>
			<th>購入者</th>
			<td><%= link_to  admins_user_path(@order.id) do %>
					<%= @order.last_name %>
					<%= @order.first_name %>
					<% end %>
			</td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= @order.ship_postal_code %>
					<%= @order.ship_address %>
					<br>
					<%= @order.last_name %>
					<%= @order.first_name %>
			</td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%= @order.payment %></td>
		</tr>
		<tr>
			<th>注文ステータス</th>
			<td><%= f.select :deposit_status, Order.deposit_statuses.keys.map{ |k| k } %></td>
		</tr>
	</table>

<%= f.fields_for :ordered_items do |i| %>
	<table class="table table-bordered">
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>制作ステータス</th>
		</tr>

	 <% @items.each do |item| %>
		<tr>
			<td><%= item.product.name %></td>
			<td><%= addTax(item.product.price) %></td>
			<td><%= item.quantity %></td>
			<td><%= totalPrice(item.product.price,item.quantity) %></td>
			<td>
				<%= i.select :product_status, OrderedItem.product_statuses.keys.map{ |l| l } %>
					<label>現在ステータス：</label>
						<% case item.product_status when "製作待ち" %>
								<span class="badge" style="background: red;"><%= item.product_status %></span>
						<% when "製作中" %>
								<span class="badge" style="background: green;"><%= item.product_status %></span>
						<% when "製作完了" %>
								<span class="badge" style="background: blue;"><%= item.product_status %></span>
						<% end %>
			</td>
		</tr>
	<% end %>
	</table>
<% end %>

	<table class="table table-bordered">
		<tr>
			<th>商品合計</th>
			<td><%= addTax(@items.sum(:price)) %></td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
			<th>請求金額合計</th>
			<td><%= @items.sum(:price) + @order.postage %>
			</td>
		</tr>
	</table>
	<hr>
	<div class="text-center">
		<%= f.submit '更新する', class:"btn btn-success" %>
	</div>
<% end %>
</div>

