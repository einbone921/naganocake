<h4>会員詳細画面</h4>

<h4>顧客ID</h4>
<%= @user.id %>
	<% if @user.is_deleted == false %>
		<span class="badge" style="background:#8bce9a">有効会員</span>
	<% else %>
		<span class="badge" style="background:red">退会済</span>
	<% end %>
<h4>氏名</h4>
	<p><%= @user.last_name %> <%= @user.first_name %></p>
<h4>フリガナ</h4>
	<p><%= @user.last_name_kana %> <%= @user.first_name_kana %></p>
<h4>郵便番号</h4>
	<p>〒<%= @user.postal_code %></p>
<h4>電話番号</h4>
	<p><%= @user.phone %></p>
<h4>メールアドレス</h4>
	<p><%= @user.email %></p>


<%= link_to edit_admins_user_path(@user) do %>
	<span class="btn btn-default">編集する</span>
<% end %>

<%= link_to orders_path do %>
	<span class="btn btn-default">注文一覧</span>
<% end %>