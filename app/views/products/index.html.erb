<div class="container">
<h1>商品一覧ページ</h1>
	<table  class="table table-bordered ">
			<tr>
				<th>商品画像</th>
				<th>商品名</th>
				<th>税込み価格</th>
				<th></th>
				<th></th>
			</tr>
			<% @products.each do |product| %>
			<tr>
				<td><%= attachment_image_tag product, :image, :fill, 150, 100,　fallback: "no_image.jpg" %></td>
				<td><%= link_to product_path(product.id) do %>
						<%= product.name %>
						<% end %>
				</td>
				<td><%= product.price %></td>
			</tr>
			<% end %>
	</table>

	<!--　ジャンル検索ボタン　-->
	<% @genres.each do |genre| %>
	  <label><%= link_to genre.name, root_path(genre: genre.id) %></label>
    <% end %>
</div>
