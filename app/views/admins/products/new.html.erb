<%= form_for(@product) do |f| %>
<h2>商品新規登録画面</h2>
  <div class="form-group">
    <label>画像投稿</label>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <label>商品名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form-group">
    <label>商品説明</label>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="form-group">
    <label>ジャンル</label>
  </div>

   <div class="form-group">
    <label>税抜価格</label>
    <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
  </div>

  <div class="form-group">
    <label>商品ステータス</label>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>



