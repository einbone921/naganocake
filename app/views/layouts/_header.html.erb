<header style="border-bottom:1px solid #dad7d7">

<% if user_signed_in? %>
<p style="text-align:right; padding: 10px 10px 0 0; color:#694D49;">
	ようこそ、
	<%= current_user.first_name %>
  	さん
</p>
<% end %>

<img src="/assets/logo.jpg" style="height:100px; display:block; margin: 0 auto">
<div class="link_box" style="margin: 0 auto 20px; text-align: center;">
	<% if user_signed_in? %>

<!-- ログイン時表示される内容-->
	<ul style="list-style: none;">
		<li style="display:inline-block;">
			<%= link_to cart_items_path do %>
			<span style="color:#694D49; margin-right: 10px;">ABOUT US</span>
			<% end %>
		</li>
		<li style="display:inline-block;">
			<%= link_to cart_items_path do %>
			<span style="color:#694D49; margin-right: 10px;">SHOPPING</span>
			<% end %>
		</li>
		<li style="display:inline-block;">
			<%= link_to destroy_user_session_path, method: :delete do %>
			<span style="color:#694D49;">LOGOUT</span>
			<% end %>
		</li>
	</ul>
	<% else %>
<!-- 非ログイン時、または非会員に表示される内容 -->
	<ul style="list-style:none;">
		<li style="display:inline-block;">
			<%= link_to cart_items_path do %>
			<span style="color:#694D49;">ABOUT US</span>
			<% end %>
		</li>
		<li style="display:inline-block;">
			<%= link_to new_user_registration_path do %>
			<span style="color:#694D49;">SIGN UP</span>
			<% end %>
		</li>
		<li style="display:inline-block;">
			<%= link_to new_user_session_path do %>
			<span style="color:#694D49;">LOGIN</span>
			<% end %>
		</li>
	<% end %>
</div>

<!-- admin側のheader -->
<% if admin_signed_in? %>
	<img src="/assets/logo.jpg" style="height:100px; display:block; margin: 0 auto">
	<ul>
		<li>
			<%=link_to admins_products_path do%>
				<span style="color:#694D49;">商品一覧</span>
			<% end %>
		</li>
		<li>
			<%=link_to admins_users_path do%>
				<span style="color:#694D49;">会員一覧</span>
			<% end %>
		</li>
		<li>
			<%=link_to admins_orders_path do%>
				<span style="color:#694D49;">注文履歴一覧</span>
			<% end %>
		</li>
		<li>
			<%=link_to admins_genres_path do%>
				<span style="color:#694D49;">ジャンル管理</span>
			<% end %>
		</li>
	</ul>
<%end%>



</header>