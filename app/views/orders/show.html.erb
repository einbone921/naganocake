<h4>注文履歴詳細</h4>

<strong>注文情報</strong>
<table class="table table-bordered ">
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at %></td>
			<th>配送先</th>
			<td><%= @order.ship_address %></td>
			<th>支払い方法</th>
			<td><%= @order.payment %></td>
			<th>ステータス</th>
			<td><%= @order.deposit_status %></td>
		</tr>
</table>

<strong>請求情報</strong>
<table class="table table-bordered ">
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= addTax(@order.ordered_items.sum(:price)) %></td>
			<th>配送料</th>
			<td><%= @order.postage %></td>
			<th>ご請求額</th>
			<td><%= addTax(@order.ordered_items.sum(:price) + @order.postage) %></td>
		</tr>
	</tbody>
</table>

<strong>注文内容</strong>
<table class="table table-bordered">
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	<tbody>
	  <% @order.ordered_items.each do |item| %>
		<tr>
			<td><%= item.product.name %></td>
			<td><%= addTax(item.product.price) %></td>
			<td><%= item.quantity %></td>
			<td><%= addTax(item.price) %></td>
		</tr>
	  <% end %>
	</tbody>
</table>
